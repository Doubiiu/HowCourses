/**comment.wxss**/

.comment-feed {
    padding: 0;
    font-size: 14rpx;
    background: #F0F4F3;
    color: #000;
}
.course-wrp{
    border-radius: 3px;
    box-shadow: 0 1px 2px #bebebe;
}
.course-item{
    width: 710rpx;
    padding: 40rpx 20rpx 10rpx;
    background: #fff;
}
.course-item .cou-tag{

}
.course-item .cou-tag .tag{
    height: 28rpx;
    padding: 15rpx 20rpx;
    border-radius: 28rpx;
    margin: 0 10rpx;
    background: #EEF5F8;
    color: #2186E0;
    font-size: 28rpx;
    vertical-align: middle;
}
.course-item .cou-title{
    padding: 40rpx 20rpx 30rpx;
    font-size: 38rpx;
}
.course-item .cou-content{
    padding: 0 20rpx;
    font-size: 26rpx;
}
.course-item .cou-follow{
    margin: 20rpx;
    height: 68rpx;
}
.course-item .cou-follow view{
    display: inline-block;
    margin: 0 40rpx 0 0;
}

.course-item .cou-follow image{
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx 0 0;
    vertical-align: middle;
}
.course-item .cou-follow .left{
    float: left;
    padding: 10rpx 0;
}
.course-item .cou-follow .left text{
    color: #AFAFAF;
    height: 50rpx;
    vertical-align: middle;
    padding: 18rpx 0;
    font-size: 24rpx;
}
.course-item .cou-follow .right{
    float: right;
    padding: 20rpx 40rpx;
    color: #ffffff;
    background: #52C980;
    border-radius: 3px;
    font-size: 26rpx;
    margin: 5rpx;
}
.cou-operate{
    width: 750rpx;
    border-top: solid 1px #ebebeb;
    border-bottom: solid 1px #ebebeb;
    color: #889091;
    vertical-align: middle;
    background: #ffffff;
}
.cou-operate .flex-item{
    padding: 20rpx 0;
    font-size: 26rpx;
}
.cou-operate .invite{
    border-right: solid 2px #ebebeb;
}
.cou-operate image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    margin: 0 20rpx 0 0;
}

.comment-feed .feed-item .feed-content .comment-body{
    padding: 0;
    /*height: 10rpx;*/
    font-size: 24rpx;
    line-height: 28rpx;
    color: #5b5b5b;
}

.container .comment-footer{
    
    position: fixed;
    bottom: 0;
    height: 65rpx;
    border-top: solid 1px #ebebeb;
    background: #2A8CE5;
    width: 735rpx;
    padding: 12.5rpx 0 12.5rpx 15rpx;
}
.container .comment-left{
    flex: 8;
    background: #4EA3E7;
    text-align: left;
}
.container .comment-left input{
    display: inline-block;
    height: 65rpx;
    font-size: 26rpx;
    
}
.comment-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.container .comment-footer .comment-left image{
    
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    padding: 12.5rpx 12.5rpx 12.5rpx 20rpx;

}
.container .comment-footer .comment-right{
    flex: 1;
}
.container .comment-footer .comment-right image{
    width: 45rpx;
    height: 45rpx;
    padding: 0 5rpx 0 5rpx;
}
.container .comment-footer .comment-right text{
    display: block;
    font-size: 16rpx;
    color: #bebebe;
}
.container .middle{
  padding-bottom: 65rpx;
}

.nonePage{
  height: 100%;
  width: 100%;
  margin-bottom: 30rpx;
}
.nonePage image{
  display: flex;
  justify-content: center;
  padding: 0rpx 60rpx 0rpx 90rpx;
  height: 600rpx;
  width: 600rpx;

}
.nonePage text{
  font-size: 30rpx;
  display: flex;
  justify-content: center;
}







